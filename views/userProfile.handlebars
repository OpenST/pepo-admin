<div class="container">
  <br/>

  <div id="profile-header"></div>

  <br/>

  <ul class="nav nav-tabs" id="profile-tab-list">
    <li class="nav-item" id="video-tab">
      <span class="nav-link active">Videos</span>
    </li>
    <li class="nav-item" id="reply-tab">
      <span class="nav-link text-danger">Replies</span>
    </li>
  </ul>

	<div id="video-list">
	  <table class="table table-striped">
	    <thead>
	    <tr>
	      <th scope="col">VIDEO</th>
	      <th scope="col">UPDATED</th>
	      <th scope="col">FANS</th>
	      <th scope="col">PEPO RECEIVED</th>
	      <th scope="col">ACTION</th>
	    </tr>
	    </thead>
	    <tbody id="video-results"></tbody>
	  </table>

	  <br/>

	  <div class="text-center">
	    <button class="btn btn-outline-danger my-2 my-sm-0 justify-content-center" type="submit" id="videos-load-btn">Load more</button>
	  </div>
  </div>

	<div id="reply-list"  style="display: none;">
	  <table class="table table-striped">
	    <thead>
	    <tr>
	      <th scope="col">REPLY</th>
	      <th scope="col">UPDATED</th>
	      <th scope="col">FANS</th>
	      <th scope="col">PEPO RECEIVED</th>
	      <th scope="col">ACTION</th>
	    </tr>
	    </thead>
	    <tbody id="reply-results"></tbody>
	  </table>

    <br/>

    <div class="text-center">
      <button class="btn btn-outline-danger my-2 my-sm-0 justify-content-center" type="submit" id="replies-load-btn">Load more</button>
    </div>
  </div>

  <div id="modal-container"></div>

  <br/>
</div>

{{#contentFor "pageScripts"}}
  <script type="text/javascript">
      $(document).ready(function() {
          var userProfile = new window.UserProfile();
      });
  </script>
  {{>profileHeaderRow}}
  {{>videoDetailRow}}
  {{>replyDetailRow}}
  {{>videoModal}}
  {{{js 'mUserProfile.js' }}}
{{/contentFor}}
