<div class="container">
    <div class="row py-5">
        <ul class="nav py-3 search-nav" id="searchTabs" role="tablist">
            <li class="nav-item">
                <a class="search-tab p-3 active" id="people-tab" data-toggle="tab" href="#people-list-tab" role="tab" aria-controls="people-list" aria-selected="true">People</a>
            </li>
            <li class="nav-item">
                <a class="search-tab p-3" id="tags-tab" data-toggle="tab" href="#tags-list-tab" role="tab" aria-controls="tags-list" aria-selected="false">Tags</a>
            </li>
            <li class="nav-item">
                <a class="search-tab p-3" id="channels-tab" data-toggle="tab" href="#channels-list-tab" role="tab" aria-controls="channels-list" aria-selected="false">Channel</a>
            </li>
        </ul>

    </div>
    <div class="tab-content " id="searchTabContent">
        <div class="tab-pane fade show active" id="people-list-tab" role="tabpanel" aria-labelledby="people-list-tab">
            <div class="row mb-3">
                <div class="col-6 form-group mb-0 ml-3">
                    <input type="text" class="form-control" id="searchPeopleInput" placeholder="Search">
                    <small id="error-box"  class="form-text error-text">&nbsp;&nbsp;</small>
                </div>

                    <button id="add-people-btn" class="btn btn-outline-success px-4">
                        Add People
                    </button>


            </div>
            <div class="row">
                <div class="col-6">
                    <ul id="people-list"  style="list-style: none"></ul>
                </div>


            </div>


        </div>
        <div class="tab-pane fade" id="tags-list-tab" role="tabpanel" aria-labelledby="tags-tab">
            <div class="row mb-3">
                <div class="col-6 form-group mb-0 ml-3">
                    <input type="text" class="form-control" id="searchTagInput" placeholder="Search">
                    <small id="error-box"  class="form-text error-text">&nbsp;&nbsp;</small>
                </div>
                <button id="add-tags-btn" class="btn btn-outline-success px-4">
                    Add Tag
                </button>
            </div>
            <div class="row">
                <div class="col-6">
                    <ul id="tags-list"  style="list-style: none"></ul>
                </div>


            </div>
        </div>

        <div class="tab-pane fade show" id="channels-list-tab" role="tabpanel" aria-labelledby="channel-list-tab">
            <div class="row mb-3">
                <div class="col-6 form-group mb-0 ml-3">
                    <input type="text" class="form-control" id="searchChannelInput" placeholder="Search">
                    <small id="error-box"  class="form-text error-text">&nbsp;&nbsp;</small>
                </div>

                <button id="add-channel-btn" class="btn btn-outline-success px-4">
                    Add Channel
                </button>


            </div>
            <div class="row">
                <div class="col-6">
                    <ul id="channels-list"  style="list-style: none"></ul>
                </div>


            </div>


        </div>
    </div>
</div>
{{#contentFor "pageScripts"}}

    <script type="text/javascript">
        $(document).ready(function() {
            var discover = new window.Discover();
        });
    </script>
    {{{css 'mDiscover.css'}}}
    {{>discover/peopleSearch}}
    {{>discover/tagSearch}}
    {{>discover/channelSearch}}
{{/contentFor}}
