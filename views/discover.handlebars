<div class="container">
    <div class="row py-5">
        <ul class="nav py-3 search-nav" id="searchTabs" role="tablist">
            <li class="nav-item">
                <a class="search-tab p-3 active" id="people-tab" data-toggle="tab" href="#people-list-tab" role="tab" aria-controls="people-list" aria-selected="true">People</a>
            </li>
            <li class="nav-item">
                <a class="search-tab p-3" id="tags-tab" data-toggle="tab" href="#tags-list" role="tab" aria-controls="tags-list" aria-selected="false">Tags</a>
            </li>
        </ul>

    </div>
    <div class="tab-content " id="searchTabContent">
        <div class="tab-pane fade show active" id="people-list-tab" role="tabpanel" aria-labelledby="people-list-tab">
            <div class="row">
                <div class="col-6 form-group">
                    <input type="text" class="form-control" id="searchPeopleInput" placeholder="Search">
                    <small id="error-box"  class="form-text error-text">&nbsp;</small>
                </div>
                <button id="add-people-btn" class="btn btn-secondary my-auto">
                    Add
                </button>
            </div>
            <div class="row">
                <div class="col-6">
                    <ul id="people-list" class="w-100 pl-0" style="list-style: none"></ul>
                </div>


            </div>


        </div>
        <div class="tab-pane fade" id="tags-list-tab" role="tabpanel" aria-labelledby="tags-tab">
            <div class="row">
                <div class="col-6 form-group">
                    <input type="text" class="form-control" id="searchTagInput" placeholder="Search">
                    <small id="error-box"  class="form-text error-text">&nbsp;</small>
                </div>
                <button id="add-tags-btn" class="btn btn-secondary my-auto">
                    Add
                </button>
            </div>
            <div class="row">
                <div class="col-6">
                    <ul id="tags-list" class="w-100 pl-0" style="list-style: none"></ul>
                </div>


            </div>
        </div>
    </div>
</div>
