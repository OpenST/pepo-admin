<script id="user-row" type="text/x-handlebars-template">
  <tr>
    <td scope="col">
      <div class="row">
        <div class='col-3' id="user-profile-img" data-user-id=\{{userId}}>
          \{{#if imageLink}}
            <img src=\{{imageLink}} style="height: 45px; width: 45px; border-radius: 50%;">
          \{{else}}
            <i class="fa fa-user-circle" style="font-size: 2.7rem; color: #dc3545;"></i>
          \{{/if}}
        </div>
        <div class='col-9'>
          <a id="dashboard-user-name" data-user-id=\{{userId}}>\{{name}}</a>
          <br/>
          <small>@\{{userName}}</small>
        </div>
      </div>

      <div class="row">
        <div class='col-3'></div>
        <div class='col-9'>
          <a href=\{{twitterLink}} target="_blank"><i class="fa fa-twitter icon-border"></i></a>
          \{{#if socialLink}}
            <a href=\{{socialLink}} target="_blank"><i class="fa fa-link icon-border"></i></a>
          \{{/if}}
          <span class="email-copy" data-user-email=\{{userEmail}}><i class="fa fa-envelope icon-border"></i></span>
          <a href=\{{userViewLink}} target="_blank"><i class="fa fa-book icon-border"></i></a>
        </div>
      </div>
    </td>

    <td scope="col">
      \{{refferalCount}}
    </td>

    <td scope="col">
        <div class="row">
        <div class='col'>
          \{{userStats.total_contributed_to}}
          <br/>
          <small>Supporting</small>
        </div>
        <div class='col'>
          \{{userStats.total_contributed_by}}
          <br/>
          <small>Supporters</small>
        </div>
      </div>
    </td>

    <td scope="col">
        <div class="row">
        <div class='col'>
          \{{userStats.total_amount_raised_in_wei}}
          <br/>
          <small>Received</small>
        </div>

        <div class='col'>
          \{{userStats.total_amount_spent_in_wei}}
          <br/>
          <small>Spent</small>
        </div>

        <div class='col'>
          \{{pepoCoins.purchased}}
          <br/>
          <small>Purchased</small>
        </div>

        <div class='col'>
          \{{pepoCoins.redeemed}}
          <br/>
          <small>Redeemed</small>
        </div>
      </div>
    </td>
    
    <td scope="col">
      \{{#if videoLink}}
        <a href=\{{videoLink}} id="video-link"><i class="fa fa-play-circle text-danger" aria-hidden="true" style="font-size: 2rem;"></i></a>
      \{{/if}}
    </td> 

    <td scope="col">
      <select class="form-control custom-select mr-sm-2 admin-action" data-user-id=\{{userId}}>
        <option value="0" selected>Select</option>
        <option value="approve">Approve</option>
        <option value="block">Block</option>
      </select>
    </td> 
  </tr>
</script>