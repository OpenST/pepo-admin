<script id="profile-header-template" type="text/x-handlebars-template">
    <div id="balance" style="border-style: solid; border-width: 2px">
        <div class="row">
            <div class="col-2 float-right ml-auto" style="font-weight: bold; margin-bottom: 2%;" id="user-balance">PEPOS: \{{balanceInPepo}} (&#36;\{{balanceInUsd}})</div>
        </div>
        <div class="row">
            <div class="col-2 float-right ml-auto" style="font-weight: bold; margin-bottom: 2%;" id="user-balance">UNICORNS: \{{pepocornBalance}} (&#36;\{{pepocornBalance}})</div>
        </div>
        <div class="row">
            <div class="col-2 float-right ml-auto" style="font-weight: bold; margin-bottom: 2%;" id="user-balance">TOTAL: &#36;\{{balanceInUsd + pepocornBalance}} (PEPOS + UNICORNS)</div>
        </div>
    </div>
  <div class="row">
    <div class='col-1' id="user-profile-img" data-user-id=\{{userId}}>
      \{{#if imageLink}}
        <img src=\{{imageLink}} style="height: 45px; width: 45px; border-radius: 50%;">
      \{{else}}
        <i class="fa fa-user-circle" style="font-size: 2.7rem; color: #dc3545;"></i>
      \{{/if}}
    </div>
    <div class="col-4" id="profile-name" style="margin-left: -3%;">
      \{{name}}
      <br/>
      <small>@\{{userName}}</small>
    </div>

    <div class="col-2 ml-auto float-right">
      <select class="form-control custom-select mr-sm-2" data-user-id=\{{userId}} id="admin-action">
        \{{#ifCond status '===' "ACTIVE"}}

          \{{#if isCreator}}
            <option value="approved" selected>Approved</option>
          \{{else}}
            <option value="0" selected>Pending</option>
            <option value="approve">Approve</option>
          \{{/if}}

          <option value="block">Block</option>
        \{{/ifCond}}

        \{{#ifCond status '===' "INACTIVE"}}
          <option value="blocked" selected>Blocked</option>
        \{{/ifCond}}

      </select>
    </div>
  </div>
</script>
